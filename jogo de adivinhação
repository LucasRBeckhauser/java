import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int a = 0;
        Scanner scanner = new Scanner(System.in);
        int aleat = new Random().nextInt(100);
        for (a=0;a < 5;a++) {
            System.out.println("Digite um numero. Você terá 5 tentativas: ");
            int numero = scanner.nextInt();
                if (numero == aleat) {
                    System.out.println("Resposta correta");
                    break;}
                        else if (numero > aleat) {
                        System.out.println("O valor digitado é maior");}
                            else {
                    System.out.println("O valor digitado é menor");}}

        System.out.println("Encerrado o jogo");

    }

}
